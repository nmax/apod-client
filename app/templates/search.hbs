<div class="page-container">
  <div class="top-bar">
    {{search-input
      currentValue=searchTerm
      on-search=(action "updateSearch")
      on-reset=(action "resetSearch")}}
  </div>

  {{#if model}}
    <div class="list-container">
      {{#ember-collection class="apod-list" buffer="10"
        items=model cell-layout=(fixed-grid-layout 600 400)
        estimated-width=1200
        as |item index|}}
        <div class="list-item">
          {{#link-to 'apod' item}}
            {{list-media-item item=item}}
          {{/link-to}}
        </div>
      {{/ember-collection}}
    </div>
  {{else}}
    <p>No search results.</p>
  {{/if}}
</div>
